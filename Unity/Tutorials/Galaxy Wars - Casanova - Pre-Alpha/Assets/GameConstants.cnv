entity PlanetStatModifier = { // Constructor for all the different planettypes there will be. Contains stat limits & research modifiers.

  AtkMin    : float32 // The minimum amount possible
  AtkMax    : float32 // The maximum amount possible
  AtkDelta  : float32 // The speed bonus to research of the stat. 1.18f increases atk researchspeed by 18%
  DefMin    : float32
  DefMax    : float32
  DefDelta  : float32
  ProdMin   : float32
  ProdMax   : float32
  ProdDelta : float32
  ResMin    : float32
  ResMax    : float32
  ResDelta  : float32

  Create(atkMin  : float32, atkMax  : float32, atkDelta  : float32,
         defMin  : float32, defMax  : float32, defDelta  : float32,
         prodMin : float32, prodMax : float32, prodDelta : float32,
         resMin  : float32, resMax  : float32, resDelta  : float32) =
        {
            AtkMin    = atkMin
            AtkMax    = atkMax
            AtkDelta  = atkDelta
            DefMin    = defMin
            DefMax    = defMax
            DefDelta  = defDelta
            ProdMin   = prodMin
            ProdMax   = prodMax
            ProdDelta = prodDelta
            ResMin    = resMin
            ResMax    = resMax
            ResDelta  = resDelta
        }
}